<Page x:Class="UnoPlayground.Presentation.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoPlayground.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer>
    <Grid utu:SafeArea.Insets="VisibleBounds">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <utu:NavigationBar Content="{Binding Title}" />

      <StackPanel Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="16">
                <TextBox Text="{Binding Path=Bogus.One.Name.FullName, Mode=TwoWay}"
            PlaceholderText="{Binding Bogus.List10.Count}" />
        <StackPanel Orientation="Horizontal">
          <Button uen:Navigation.Request="{Binding RoutePaths.SecondPage}" Content="{Binding RoutePaths.SecondPage}"
              AutomationProperties.AutomationId="SecondPageButton"
              Command="{Binding GoToSecond}" />
          <Button uen:Navigation.Request="{Binding RoutePaths.TestPage}" uen:Navigation.Data="{Binding}" Content="{Binding RoutePaths.NewPage}" />
        </StackPanel>
                <ListView ItemsSource="{Binding Bogus.List10}">
<ListView.ItemTemplate>
    <DataTemplate>
        <Grid>
          <StackPanel Spacing="10" Orientation="Horizontal">
            <TextBlock Text="{Binding Vehicle.Manufacturer}"/>
            <TextBlock Text="{Binding Number.Int1000To9999}"/>
            <TextBlock Text="zł" />
          </StackPanel>
        </Grid>
    </DataTemplate>
</ListView.ItemTemplate>
</ListView>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
